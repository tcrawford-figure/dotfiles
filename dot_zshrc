# Load all files from .config/zshrc.d directory
if [[ -d $HOME/.config/zshrc.d/pre ]]; then
  for file in $HOME/.config/zshrc.d/pre/*.zsh; do
    source $file
  done
fi

# Load all files from .config/zshrc.d directory
if [[ -d $HOME/.config/zshrc.d/core ]]; then
  for file in $HOME/.config/zshrc.d/core/*.zsh; do
    source $file
  done
fi

# Load all files from .config/zshrc.d directory
if [[ -d $HOME/.config/zshrc.d/post ]]; then
  for file in $HOME/.config/zshrc.d/post/*.zsh; do
    source $file
  done
fi